---
import LogoIcon from "./LogoIcon.astro";
import Burgerknap from "./Burgerknap.astro"
---

<div>
  <LogoIcon />
  <Burgerknap/>
</div>
<nav>
  <a href="">rooms</a>
  <a href="">about us</a>
  <a href="">events</a>
  <a href="">menu</a>
  <a href="">guestbook</a>
  <a href="">contact</a>
</nav>
<style>
  div {
    position: absolute;
    display: flex;
    width: 100%;
  }
  nav {
    position: absolute;
    inset: 0px;
    display: grid;
    place-items: center;
    z-index: 100;
    background-color: var(--custom_white);
    transform: translateY(-100%);
    transition: all 0.3s ease-in-out;
  }
  a {
    color: var(--custom_black);
    text-decoration: none;
    font-family: raleway, sans-serif;
    font-weight: 400;
    font-size: clamp(5vw, 5rem, 6vw);
    text-transform: uppercase;
  }
  .showmenu{
    transform: translateY(0%);
  }
</style>
