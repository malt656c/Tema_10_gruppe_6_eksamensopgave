---
import LogoIcon from "./LogoIcon.astro";
import Burgerknap from "./Burgerknap.astro";

const { iconColor } = Astro.props;
---

<article>
  <div>
    <LogoIcon Color={iconColor} />
    <Burgerknap />
  </div>
  <nav>
    <a href="rooms.html">rooms</a>
    <a href="about_us.html">about us</a>
    <a href="events.html">events</a>
    <a href="food.html">menu</a>
    <a href="guestbook.html">guestbook</a>
    <a href="om_svb.html">About Svendborg</a>
  </nav>
</article>
<style define:vars={{ iconColor }}>
  div {
    position: absolute;
    display: flex;
    width: 100%;
  }
  nav {
    position: fixed;
    inset: 0px;
    display: grid;
    place-items: center;
    z-index: 100;
    background-color: var(--custom_white);
    transform: translateY(-100%);
    transition: all 0.3s ease-in-out;
  }
  a {
    color: var(--custom_black);
    text-decoration: none;
    font-size: clamp(5vw, 6vw, 3rem);
    text-transform: uppercase;
  }
  .showmenu {
    transform: translateY(0%);
  }

  @media (min-width: 1150px) {
    article{
      position: absolute;
      display: grid;
      width: 100%;
      height: 100px;
    }
    nav {
      position: relative;
      inset: unset;
      width: 70vw;
      margin-inline: auto;
      display: flex;
      justify-content: space-between;
      z-index: 100;
      background-color: transparent;
      transform: translateY(0%);
      transition: all 0.3s ease-in-out;
    }
    nav::after{
      content: "";
      width: 100%;
      height: 2px;
      background-color: var(--iconColor);
      position: absolute;
      bottom: 1rem;
    }
    a {
      color: var(--iconColor);
      font-size: 1.3rem;
    }
  }
</style>
