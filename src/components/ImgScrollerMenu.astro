<style>
  section {
    padding-inline: 1.5em;
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-top: 3rem;
  }
  #slider-container {
    display: flex;
    gap: 1rem;
    position: relative;
    padding-inline: 1.5rem;
    height: 350px;
    overflow-x: scroll;
    overflow-y: hidden;
    scroll-behavior: smooth;
    scroll-snap-align: center;
  }

  img {
    height: 100%;
    width: 250px;
    object-fit: cover;
  }
</style>

<script>
  const imageSlider = document.getElementById("slider-container");
  const RightArrow = document.getElementById("RightArrow");
  const LeftArrow = document.getElementById("LeftArrow");
  let currentImage = 0;
  RightArrow.addEventListener("mousedown", nextImage);
  function nextImage() {
    if (currentImage == imageSlider.children.length) {
    } else {
      currentImage++;
    }
    console.log(currentImage);
    imageScroll(currentImage);
  }
  LeftArrow.addEventListener("mousedown", prevImage);
  function prevImage() {
    if (currentImage == 0) {
    } else {
      currentImage += -1;
    }
    console.log(currentImage);
    imageScroll(currentImage);
  }
  console.log(imageSlider.children);

  function imageScroll(currentImage) {
    if (currentImage < 0) {
    } else if (currentImage > imageSlider.children.length) {
    } else {
      imageSlider.scroll({ left: 266 * currentImage, behavior: "smooth" });
    }
  }
</script>
