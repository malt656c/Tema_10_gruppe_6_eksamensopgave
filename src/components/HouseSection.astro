<style>
  section {
    background-color: var(--light_blue);
    display: grid;
    place-items: center;
    gap: 2rem;
    padding: 1rem;
    padding-block: 2rem;
  }
  img {
    width: 100%;
    max-width: 500px;
    filter: invert(100%);
  }
  p {
    color: var(--custom_white);
    font-family: raleway, sans-serif;
    font-weight: 400;
    line-height: 2rem;
    padding-inline: 1rem;
    display: grid;
    place-items: center;
    gap: 1rem;
    max-width: 45ch;
  }
  p::after,
  p::before {
    content: "";
    width: 110%;
    height: 2px;
    background-color: var(--custom_white);
  }
  @media (min-width: 1150px){
section{
  grid-template-columns: 5fr 4fr;
}
p{
  grid-column: 2/3;

}
img{
  grid-row: 1/3;
  max-width: 700px;
}
  }
</style>
