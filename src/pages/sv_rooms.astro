---
import NavMenu from "../components/NavMenu.astro";
import Footer from "../components/Footer.astro";
import Line from "../components/Line.astro";
import PageTitle from "../components/PageTitle.astro";
import Button from "../components/Button.astro";
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/rosenhoj_favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://use.typekit.net/xcg1awn.css" />
    <link rel="stylesheet" href="../../public/styles/global.css" />
    <title>Rosenhøj Bed & Breakfast</title>
  </head>
  <body>
    <header>
      <NavMenu iconColor="var(--custom_black)" />
      <PageTitle>Rosenhøj - Suite Gardenview</PageTitle>
    </header>
    <main>
      <section>
        <p>Sleeps up to 4</p>
        <h3>1500.- DKK</h3>
        <img src="public/images/bed.jpg" alt="bed" />
        <p>
          Newly refurnished bedroom with King Size bed, including a single daybed in the corner of the bedroom, perfect for small family's up to 4. Your own private living room with fireplace and
          bathroom. Television with premium channels. Coffee and tea making station. This is a home away from home.
        </p>
      </section>

      <Line lineWidth="90%" />
      <section>
        <ul class="Information">
          <li>King Size Bed.</li>
          <li>Newly refurnished.</li>
          <li>Fast WiFi.</li>
          <li>Extra daybed in the corner of the bedroom.</li>
          <li>Private living room with fireplace.</li>
          <li>Television with premium channels.</li>
          <li>Private bathroom.</li>
          <li>Coffee and tea making station.</li>
          <li>Sleeps 2, max 4.</li>
          <li>Homemade continental breakfast.</li>
        </ul>

        <img src="public/images/plantegning.svg" alt="Room" />
      </section>
      <Line lineWidth="90%" />
      <Button text="Book Room" />
      <Line lineWidth="90%" />
    </main>
    <Footer />
  </body>

  <style>
section{
display: grid;
gap: 2rem;
place-items: center;
padding-block: 1rem;
}
    img {
      width: 100%;
      object-fit: cover;
    }
    img[alt="Room"]{
      padding: 2rem;
    }
    ul{
      line-height: 2rem;
    }
    p{
      line-height: 1.75rem;
    }
    @media (min-width: 800px) {
section:nth-of-type(2){
  grid-template-columns: repeat(2, 1fr);
  max-width: 1200px;
  margin: auto;
}
img{
  max-height: 600px;
}
img[alt="Room"]{
     object-fit: contain;
     max-height: 400px;
    }
    }
  </style>

  <script></script>
</html>
